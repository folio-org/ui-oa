{
  "name": "@folio/oa",
  "version": "2.0.1",
  "description": "FOLIO app for Open Access management",
  "main": "src/index.js",
  "repository": "folio/ui-oa",
  "license": "Apache-2.0",
  "scripts": {
    "start": "stripes serve",
    "build": "stripes build --output ./output",
    "lint": "eslint .",
    "test": "yarn run test:jest",
    "test:jest": "jest --ci --coverage",
    "test:unit": "yarn run test:jest && yarn run test:unit:report",
    "build-mod-descriptor": "stripes mod descriptor --full --strict | jq '.[]' > module-descriptor.json ",
    "test:unit:report": "cp -r ./artifacts/coverage-jest ./artifacts/coverage"
  },
  "stripes": {
    "actsAs": [
      "app",
      "settings"
    ],
    "displayName": "ui-oa.meta.title",
    "route": "/oa",
    "home": "/oa/publicationRequests",
    "hasSettings": true,
    "queryResource": "query",
    "okapiInterfaces": {
      "oa": "1.0 2.0"
    },
    "optionalOkapiInterfaces": {
      "invoice": "7.0",
      "erm": "5.0 6.0",
      "organizations": "1.0",
      "finance.exchange-rate": "1.0"
    },
    "stripesDeps": [
      "@folio/stripes-erm-components"
    ],
    "icons": [
      {
        "name": "app",
        "alt": "FOLIO app for Open Acces Management",
        "title": "OA"
      },
      {
        "name": "party",
        "alt": " ",
        "title": "party"
      },
      {
        "name": "journal",
        "alt": " ",
        "title": "journal"
      }
    ],
    "permissionSets": [
      {
        "permissionName": "module.oa.enabled",
        "displayName": "UI: ui-oa module is enabled",
        "visible": false,
        "subPermissions": [
          "oa.refdata.read"
        ]
      },
      {
        "permissionName": "settings.oa.enabled",
        "displayName": "Settings (OA): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": false
      },
      {
        "permissionName": "ui-oa.allSettings.manage",
        "displayName": "Settings (Open Access): Manage all Open Access settings",
        "description": "Grants permission to view and edit all the Open Access settings",
        "subPermissions": [
          "settings.oa.enabled",
          "oa.checklistItems.manage",
          "oa.refdata.manage",
          "oa.settings.write"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-oa.publicationRequest.view",
        "displayName": "Open Access: Search & view publication requests",
        "description": "A user with this permission can search and view existing publication requests. This includes the permission to see and access the Open Access app in the Folio interface",
        "visible": true,
        "subPermissions": [
          "module.oa.enabled",
          "oa.publicationRequest.view",
          "oa.correspondence.view",
          "oa.charges.view",
          "oa.reports.item.get"
        ]
      },
      {
        "permissionName": "ui-oa.publicationRequest.edit",
        "displayName": "Open Access: Edit publication requests",
        "description": "Grants all permissions included in 'Open Access: Search & view publication requests' plus the ability to edit publication requests",
        "visible": true,
        "subPermissions": [
          "ui-oa.publicationRequest.view",
          "oa.publicationRequest.edit",
          "oa.correspondence.edit",
          "oa.charges.edit"
        ]
      },
      {
        "permissionName": "ui-oa.publicationRequest.manage",
        "displayName": "Open Access: Manage publication requests",
        "description": "Grants all permissions included in 'Open Access: Edit publication requests' plus the ability to manage publication requests",
        "visible": true,
        "subPermissions": [
          "ui-oa.publicationRequest.edit",
          "oa.publicationRequest.manage",
          "oa.correspondence.manage",
          "oa.charges.manage"
        ]
      },
      {
        "permissionName": "ui-oa.party.view",
        "displayName": "Open Access: Search & view partys",
        "description": "A user with this permission can search and view existing partys. This includes the permission to see and access the Open Access app in the Folio interface",
        "visible": true,
        "subPermissions": [
          "module.oa.enabled",
          "oa.party.view"
        ]
      },
      {
        "permissionName": "ui-oa.party.edit",
        "displayName": "Open Access: Edit partys",
        "description": "Grants all permissions included in 'Open Access: Search & view partys' plus the ability to edit partys",
        "visible": true,
        "subPermissions": [
          "ui-oa.party.view",
          "oa.party.edit"
        ]
      },
      {
        "permissionName": "ui-oa.party.manage",
        "displayName": "Open Access: Manage partys",
        "description": "Grants all permissions included in 'Open Access: Edit partys' plus the ability to manage partys",
        "visible": true,
        "subPermissions": [
          "ui-oa.party.edit",
          "oa.party.manage"
        ]
      },
      {
        "permissionName": "ui-oa.journal.view",
        "displayName": "Open Access: Search & view journals",
        "description": "A user with this permission can search and view existing journals. This includes the permission to see and access the Open Access app in the Folio interface",
        "visible": true,
        "subPermissions": [
          "module.oa.enabled",
          "oa.works.view",
          "oa.titleInstances.view",
          "oa.scholarlyWork.view"
        ]
      },
      {
        "permissionName": "ui-oa.journal.edit",
        "displayName": "Open Access: Edit journals",
        "description": "Grants all permissions included in 'Open Access: Search & view journals' plus the ability to edit journals",
        "visible": true,
        "subPermissions": [
          "ui-oa.journal.view",
          "oa.works.edit",
          "oa.scholarlyWork.edit"
        ]
      },
      {
        "permissionName": "ui-oa.journal.manage",
        "displayName": "Open Access: Manage journals",
        "description": "Grants all permissions included in 'Open Access: Edit journals' plus the ability to manage journals",
        "visible": true,
        "subPermissions": [
          "ui-oa.journal.edit",
          "oa.scholarlyWork.manage"
        ]
      },
      {
        "permissionName": "ui-oa.view",
        "displayName": "Open Access Requests: Search & view all",
        "description": "A user with this permission can search and view existing Open Access publication requests and related information including checklists. This includes the permission to see and access the OA app in the Folio interface",
        "subPermissions": [
          "module.oa.enabled",
          "ui-oa.publicationRequest.view",
          "ui-oa.party.view",
          "ui-oa.journal.view"
        ],
        "replaces": [
          "ui-oa.oa.view"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-oa.manage",
        "displayName": "Open Access Requests: Edit all",
        "description": "A user with this permission can search, view and edit Open Access publication requests and related information including checklists. This includes the permission to create and edit new requests, parties (people), works, charges as well as to change the status and visibility of checklist items on a request",
        "subPermissions": [
          "ui-oa.view",
          "ui-oa.publicationRequest.edit",
          "ui-oa.party.edit",
          "ui-oa.journal.edit"
        ],
        "replaces": [
          "ui-oa.oa.manage"
        ],
        "visible": true
      }
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/preset-flow": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@folio/eslint-config-stripes": "^7.0.0",
    "@folio/handler-stripes-registry": "^2.0.1",
    "@folio/jest-config-stripes": "^2.0.0",
    "@folio/stripes-erm-components": "^9.0.1",
    "@folio/stripes-erm-testing": "^2.0.0",
    "@folio/service-interaction": "^2.0.0",
    "@folio/stripes": "^9.0.0",
    "@folio/stripes-cli": "^3.0.0",
    "eslint": "^7.32.0",
    "graphql": "^16.0.0",
    "moment": "^2.22.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.4",
    "react-query": "^3.9.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.0",
    "redux-observable": "^1.2.0",
    "regenerator-runtime": "^0.13.3",
    "rxjs": "^6.6.3"
  },
  "dependencies": {
    "@folio/stripes-acq-components": "^5.0.0",
    "@k-int/stripes-kint-components": "^5.2.2",
    "classnames": "^2.2.6",
    "compose-function": "^3.0.3",
    "final-form": "^4.18.5",
    "final-form-arrays": "^3.0.1",
    "final-form-focus": "^1.1.2",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.0",
    "query-string": "^6.6.0",
    "react-final-form": "^6.3.0",
    "react-final-form-arrays": "^3.1.1"
  },
  "peerDependencies": {
    "@folio/handler-stripes-registry": "^2.1.0",
    "@folio/stripes-erm-components": "^9.0.0",
    "@folio/service-interaction": "^2.0.0",
    "@folio/stripes": "^9.0.0",
    "moment": "^2.22.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.4",
    "react-query": "^3.9.0",
    "react-router-dom": "^5.2.0"
  }
}
